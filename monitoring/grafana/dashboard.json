{
  "dashboard": {
    "id": null,
    "title": "Soft KVM Performance Dashboard - p99 Focus",
    "tags": ["soft-kvm", "kvm", "performance", "p99"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Video Latency p99 (Target: <50ms)",
        "type": "stat",
        "targets": [
          {
            "expr": "histogram_quantile(0.99, rate(soft_kvm_video_latency_ms_bucket[5m]))",
            "legendFormat": "p99"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ms",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": null, "color": "green" },
                { "value": 50, "color": "yellow" },
                { "value": 100, "color": "red" }
              ]
            }
          }
        },
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 }
      },
      {
        "id": 2,
        "title": "Input Latency p99 (Target: <10ms)",
        "type": "stat",
        "targets": [
          {
            "expr": "histogram_quantile(0.99, rate(soft_kvm_input_latency_ms_bucket[5m]))",
            "legendFormat": "p99"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ms",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": null, "color": "green" },
                { "value": 10, "color": "yellow" },
                { "value": 20, "color": "red" }
              ]
            }
          }
        },
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 }
      },
      {
        "id": 3,
        "title": "Video Latency Distribution",
        "type": "heatmap",
        "targets": [
          {
            "expr": "rate(soft_kvm_video_latency_ms_bucket[5m])",
            "legendFormat": "{{le}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ms"
          }
        },
        "gridPos": { "h": 12, "w": 24, "x": 0, "y": 8 }
      },
      {
        "id": 4,
        "title": "Input Latency Distribution",
        "type": "heatmap",
        "targets": [
          {
            "expr": "rate(soft_kvm_input_latency_ms_bucket[5m])",
            "legendFormat": "{{le}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ms"
          }
        },
        "gridPos": { "h": 12, "w": 24, "x": 0, "y": 20 }
      },
      {
        "id": 5,
        "title": "CPU Usage p99 (Target: <15%)",
        "type": "stat",
        "targets": [
          {
            "expr": "histogram_quantile(0.99, rate(soft_kvm_cpu_usage_percent_bucket[5m]))",
            "legendFormat": "p99"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": null, "color": "green" },
                { "value": 15, "color": "yellow" },
                { "value": 25, "color": "red" }
              ]
            }
          }
        },
        "gridPos": { "h": 8, "w": 8, "x": 0, "y": 32 }
      },
      {
        "id": 6,
        "title": "Memory Usage p99 (Target: <256MB)",
        "type": "stat",
        "targets": [
          {
            "expr": "histogram_quantile(0.99, rate(soft_kvm_memory_usage_mb_bucket[5m]))",
            "legendFormat": "p99"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "MB",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": null, "color": "green" },
                { "value": 256, "color": "yellow" },
                { "value": 512, "color": "red" }
              ]
            }
          }
        },
        "gridPos": { "h": 8, "w": 8, "x": 8, "y": 32 }
      },
      {
        "id": 7,
        "title": "Network Bandwidth",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(soft_kvm_network_bytes_per_sec[5m])",
            "legendFormat": "bytes/sec"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "Bps"
          }
        },
        "gridPos": { "h": 8, "w": 8, "x": 16, "y": 32 }
      },
      {
        "id": 8,
        "title": "Connection Time p95 (Target: <1000ms)",
        "type": "stat",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(soft_kvm_connection_time_ms_bucket[5m]))",
            "legendFormat": "p95"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ms",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": null, "color": "green" },
                { "value": 1000, "color": "yellow" },
                { "value": 2000, "color": "red" }
              ]
            }
          }
        },
        "gridPos": { "h": 8, "w": 8, "x": 0, "y": 40 }
      },
      {
        "id": 9,
        "title": "Active Connections",
        "type": "stat",
        "targets": [
          {
            "expr": "soft_kvm_active_connections",
            "legendFormat": "connections"
          }
        ],
        "gridPos": { "h": 8, "w": 8, "x": 8, "y": 40 }
      },
      {
        "id": 10,
        "title": "Error Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(soft_kvm_errors_total[5m])",
            "legendFormat": "errors/sec"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "value": null, "color": "green" },
                { "value": 0.1, "color": "yellow" },
                { "value": 1.0, "color": "red" }
              ]
            }
          }
        },
        "gridPos": { "h": 8, "w": 8, "x": 16, "y": 40 }
      },
      {
        "id": 11,
        "title": "Performance Trends (1h)",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.99, rate(soft_kvm_video_latency_ms_bucket[1m]))",
            "legendFormat": "Video p99"
          },
          {
            "expr": "histogram_quantile(0.99, rate(soft_kvm_input_latency_ms_bucket[1m]))",
            "legendFormat": "Input p99"
          },
          {
            "expr": "histogram_quantile(0.99, rate(soft_kvm_cpu_usage_percent_bucket[1m]))",
            "legendFormat": "CPU p99"
          }
        ],
        "yAxes": [
          { "unit": "ms", "label": "Latency (ms)" },
          { "unit": "percent", "label": "CPU (%)" }
        ],
        "gridPos": { "h": 12, "w": 24, "x": 0, "y": 48 }
      },
      {
        "id": 12,
        "title": "Resource Usage Over Time",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.99, rate(soft_kvm_memory_usage_mb_bucket[1m]))",
            "legendFormat": "Memory p99 (MB)"
          },
          {
            "expr": "rate(soft_kvm_network_bytes_per_sec[1m])",
            "legendFormat": "Network (B/s)"
          }
        ],
        "yAxes": [
          { "unit": "MB", "label": "Memory (MB)" },
          { "unit": "Bps", "label": "Network (B/s)" }
        ],
        "gridPos": { "h": 12, "w": 24, "x": 0, "y": 60 }
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"]
    },
    "templating": {
      "list": [
        {
          "name": "instance",
          "type": "query",
          "query": "label_values(soft_kvm_info, instance)",
          "label": "Instance"
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "name": "SLO violations",
          "datasource": "prometheus",
          "expr": "histogram_quantile(0.99, rate(soft_kvm_video_latency_ms_bucket[5m])) > 50",
          "step": "60s",
          "iconColor": "red",
          "textFormat": "Video latency SLO violated",
          "tags": ["slo", "violation"]
        }
      ]
    },
    "refresh": "30s",
    "schemaVersion": 27,
    "version": 1,
    "links": []
  }
}
